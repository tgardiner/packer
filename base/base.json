{
  "variables": {
    "commit": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu-minimal/images/*ubuntu-focal-20.04-amd64-minimal-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
           "device_name": "/dev/sda1",
           "encrypted": true,
           "volume_size": 25
        }
      ],
      "vpc_filter": {
        "filters": {
          "isDefault": "false"
          }
      },
      "subnet_filter": {
        "filters": {
          "tag:Type": "public",
          "state": "available"
        },
        "most_free": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "tgardiner/images/base-{{timestamp}}",
      "tags": {
        "Commit": "{{user `commit`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./files/amazon-cloudwatch-agent.gpg",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "file",
      "source": "./files/amazon-cloudwatch-agent.json",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "shell",
      "inline": ["/usr/bin/cloud-init status --wait"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "script": "./scripts/base.sh"
    }
  ]
}